{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/main",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "electron"]
  },
  "include": ["src/main/**/*.ts", "main.ts", "preload.ts"],
  "exclude": ["node_modules", "dist"]
} 