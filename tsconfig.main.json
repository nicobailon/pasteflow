{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist/main",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "types": ["node", "electron"]
  },
  "include": ["main.ts", "src/main/**/*.ts", "preload.js", "excluded-files.js"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}